@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Home Page";
}
<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6" style="width:330px;">
            <div class="row p-2" style="height: 100%;">
                <div class="col-12 p-1" style="border:1px solid #78c2ad; border-radius: 5px;">
                    <div class="card" style="height:100%; width:300px; margin:auto;">
                        <img src="@product.ImageUrl" class="card-img-top rounded"
                        style="width:100%;height:400px">
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@product.Title</p>
                                <p class="card-title h5 text-secondary">@product.Author</p>
                            </div>
                            <div class="pl-1">
                                <p>Price: <b>$@product.Price.ToString("0.00")</b></p>    
                            </div>
                        </div>
                        <div class="card-footer position-relative fixed-bottom">
                            <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
